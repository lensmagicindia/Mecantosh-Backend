# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# MongoDB
MONGODB_URI=mongodb://localhost:27017/mecantosh

# JWT — REQUIRED. Server will not start without these.
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# OTP
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=4

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# File Storage (local or s3)
STORAGE_TYPE=local
UPLOAD_MAX_SIZE=5242880

# AWS S3 (required if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=your-s3-bucket-name

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Service Configuration
SERVICE_FEE=3.00
TAX_RATE=0.00
MAX_BOOKINGS_PER_SLOT=3
BUSINESS_START_HOUR=8
BUSINESS_END_HOUR=21

# Admin Seed Script (optional — used by scripts/seed-admin.ts)
# If omitted, a secure random password is generated and printed to console
ADMIN_SEED_EMAIL=admin@mecantosh.com
ADMIN_SEED_PASSWORD=
